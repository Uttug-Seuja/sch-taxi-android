<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.sch.sch_taxi.ui.taxicreate.TaxiCreateViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="약속 만들기"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eeeeee"/>


        <LinearLayout
            android:id="@+id/history_content_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/edit_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="제목을 입력해주세요"
                android:text="@={vm.titleEvent}"
                android:textColor="#5C5C5C"
                android:textSize="16sp"

                />


            <View

                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />


            <EditText
                android:id="@+id/edit_start_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="출발지를 입력해주세요"
                android:text="@={vm.startPlaceEvent}"
                android:textColor="#5C5C5C"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_start_place_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="도착지를 입력해주세요"
                android:text="@={vm.destinationEvent}"
                android:textColor="#5C5C5C"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_destination_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/gender_select_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@={vm.genderEvent}"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_allow_back" />
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee" />


            <EditText
                android:id="@+id/edit_recurit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="모집 인원을 알려주세요"
                android:inputType="number"
                android:textColor="#5C5C5C"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />


            <RelativeLayout
                android:id="@+id/seat_select_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/seat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@={vm.seatEvent}"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_bookmark_border_24" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee" />


            <RelativeLayout
                android:id="@+id/date_select_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@={vm.dateEvent}"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_allow_back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee" />

            <RelativeLayout
                android:id="@+id/reservation_time_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/reservation_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@={vm.reservationTimeEvent}"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_bookmark_border_24" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="문어!"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp">


                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="답어!"
                    android:textColor="#5C5C5C"
                    android:textSize="16sp">


                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />


            <!--                <TextView-->
            <!--                    android:id="@+id/edit_reservation_time"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginRight="4dp"-->
            <!--                    android:layout_marginTop="15dp"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:background="#007680"-->
            <!--                    android:gravity="center"-->
            <!--                    android:padding="16dp"-->
            <!--                    android:text="@={viewmodel.reservationTimeEvent}"-->
            <!--                    android:textColor="#fff"-->
            <!--                    android:textSize="16sp" />-->


            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="* 참고사항 *\n• 장소는 작성자가 직접 섭외해주셔야 합니다.\n• 대운동장 예약은 별개로 예약하셔야 합니다.\n• 게시글 수정 시 인원수는 변경할 수 없습니다."
                android:textColor="#5C5C5C"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/start_btn"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/orange_50"
                    app:cardCornerRadius="15dp">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="-4sp"
                        android:text="신청하기"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="normal" />


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


            <!--                <com.google.android.material.card.MaterialCardView-->
            <!--                    android:id="@+id/start_btn"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="59dp"-->
            <!--                    android:backgroundTint="@color/calender_picker"-->
            <!--                    app:cardCornerRadius="15dp"-->
            <!--                    android:layout_marginTop="20dp"-->
            <!--                    android:layout_gravity="bottom"-->
            <!--                    >-->


            <!--                    <TextView-->

            <!--                        android:layout_width="match_parent"-->
            <!--                        android:layout_height="match_parent"-->
            <!--                        android:gravity="center"-->
            <!--                        android:letterSpacing="0"-->
            <!--                        android:lineSpacingExtra="-4sp"-->
            <!--                        android:text="신청하기"-->
            <!--                        android:textColor="@color/white"-->
            <!--                        android:textSize="22sp"-->
            <!--                        android:textStyle="normal" />-->


            <!--                </com.google.android.material.card.MaterialCardView>-->


        </LinearLayout>

    </LinearLayout>

</layout>
